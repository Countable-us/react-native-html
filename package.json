{
  "name": "react-native-html",
  "version": "2.0.0",
  "description": "Load SVG images from network",
  "main": "index.js",
  "scripts": {
    "pretest": "npm run lint --silent",
    "test": "jest",
    "lint": "eslint . --ext .js,.jsx"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Countable-us/react-native-html.git"
  },
  "keywords": [
    "SVG",
    "URI",
    "React",
    "Native",
    "Network",
    "Http"
  ],
  "author": "@Countable-us",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Countable-us/react-native-html/issues"
  },
  "homepage": "https://github.com/Countable-us/react-native-html#readme",
  "devDependencies": {
    "babel-eslint": "^7.1.1",
    "babel-jest": "18.0.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react-native": "1.9.1",
    "eslint": "^3.13.1",
    "eslint-config-airbnb": "^14.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^3.0.2",
    "eslint-plugin-react": "^6.9.0",
    "jest": "18.1.0",
    "prop-types": "^15.6.0",
    "react": "15.4.2",
    "react-native": "0.40.0",
    "react-test-renderer": "15.4.2"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "env": {
      "browser": true,
      "node": true
    },
    "extends": "airbnb",
    "rules": {
      "prefer-template": 0,
      "react/jsx-filename-extension": [
        2,
        {
          "extensions": [
            ".js",
            ".jsx"
          ]
        }
      ],
      "react/forbid-prop-types": 0,
      "import/no-extraneous-dependencies": 0
    },
    "settings": {
      "import/resolver": {
        "node": {
          "extensions": [
            ".js",
            ".android.js",
            ".ios.js"
          ]
        }
      }
    },
    "globals": {
      "__DEV__": true,
      "jest": false,
      "describe": false,
      "it": true,
      "expect": false
    }
  }
}
